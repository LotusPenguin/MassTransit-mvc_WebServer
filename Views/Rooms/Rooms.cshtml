@model IEnumerable<KSR_Docker.Models.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<h1>@ViewData["Title"]</h1>

<br />

<div>
    <table>
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Type
                </th>
                <th>
                    Status
                </th>
                <th>
                    Options
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => room.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(model => room.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => room.TypeId)
                    </td>
                    <td>
                        @Html.DisplayFor(model => room.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "RemoveRoom", "Rooms", new { roomId = room.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<br />
<br />

<div>
    <form action="/rooms/add" method="post" class="small">
        <div class="grid-container">
            <label for="id">ID:</label>
            <input id="id" type="number" name="id" />
            <label for="name">Name:</label>
            <input id="name" type="text" name="name" />
            <label for="status">Status:</label>
            <input id="status" type="text" name="status" />
            <label for="roomType">Type:</label>
            <input id="roomType" type="number" name="roomType" />
        </div>
        <input type="submit" value="Add room" />
    </form>
</div>